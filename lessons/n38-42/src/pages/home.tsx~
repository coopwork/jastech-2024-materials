import PostsList from '@/components/lists/posts-list.tsx';
import {
  Pagination,
  PaginationContent,
  PaginationItem,
  PaginationLink,
} from '@/components/ui/pagination.tsx';
import { Link } from 'react-router-dom';

const Home = () => {
  return (
    <div className='container mx-auto'>
      <PostsList />

      <Pagination className='my-7'>
        <PaginationContent>
          {[1, 2, 3, 4, 5].map((page) => (
            <PaginationItem className='relative' key={page}>
              <Link
                  className='absolute top-0 left-0 bottom-0 right-0'
                  to={`?page=${page}`}
              />
              <PaginationLink>

                {page}
              </PaginationLink>
            </PaginationItem>
          ))}
        </PaginationContent>
      </Pagination>
    </div>
  );
};

export default Home;
